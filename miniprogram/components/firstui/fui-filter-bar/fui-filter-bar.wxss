.fui-filter__bar-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.fui-filter__bar-line {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  transform-origin: 0 100%;
  z-index: 1;
  pointer-events: none;
}

.fui-filter__bar-item {
  flex: 1;
  display: flex;
  flex-shrink: 0;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: normal;
  overflow: hidden;
  padding: 0 24rpx;
}

.fui-filter__bar-text {
  white-space: nowrap;
  display: block;
  max-width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
}


.fui-filter__bar-icon {
  transition: transform 0.25s;
  transform: rotate(0deg);
}

.fui-fb__icon-rotate {
  transform: rotate(180deg);
}