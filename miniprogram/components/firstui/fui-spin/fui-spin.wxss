.fui-spin__wrap {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  animation: spin 0.85s linear infinite;
}

@-webkit-keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}