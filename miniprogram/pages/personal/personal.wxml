        <view class="fui-icon__close" bindtap="closePopup">
          <fui-icon name="close" size="{{48}}"></fui-icon>
        </view>
      </view>
    </fui-bottom-popup>
    <fui-dialog title="联系方式" show="{{dialog_show}}" maskClosable bindclick="confirm" bindcancel="cancel">
      <!--内容文本加入-->
      <towxml nodes="{{about_cn}}"/>
    </fui-dialog>
