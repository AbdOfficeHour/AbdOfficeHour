<!--pages/appointmentList/appointmentList.wxml-->

<!--没有预约时-->
<block wx:if="{{items}}">
  <!--Chinese-->
  <block wx:if="{{zh_cn}}">
    <view class="standard">
	    <view class="title">暂无预约</view>
    </view>
  </block>
  <!--English-->
  <block wx:elif="{{!zh_cn}}">
    <view class="standard">
	    <view class="title">No reservation at present</view>
    </view>
  </block>
</block>

<!--有预约时-->
<block wx:else>
  <scroll-view class="scrollview" scroll-y>
    <block wx:for="{{list}}" wx:key="index">
    <!--chinese-->
      <block wx:if="{{zh_cn}}">
        <fui-card class="card"  title="老师：{{item.teacher}}" tag="{{item.date}} {{item.time}}" showBorder="true" borderColor="{{var(--descColor)}}" bind:click color="{{var(--focusColor)}}">
	        <view class="fui-card__content">备注：  {{item.tips}}</view>
        </fui-card>
      </block>


      <!--English-->
      <block wx:elif="{{!zh_cn}}">
        <fui-card class="card" src="{{src}}" title="Teacher：{{teacher}}" tag="{{date}} {{time}}" showBorder="true" borderColor="{{var(--descColor)}}" bind:click>
	        <view class="fui-card__content">Message：  {{tips}}</view>
        </fui-card>
      </block>
    </block>
  </scroll-view>
</block>




<!--学生端“添加预约”-->
<block wx:if="{{credit === 1 || credit === 3}}">
  <!--用中文时-->
  <block wx:if="{{zh_cn}}">
    <view class="button">
      <button  type="primary" bindtap="goTo"> 添 加 预 约 </button>
    </view>
  </block>
  <!--使用英语时-->
  <block wx:elif="{{!zh_cn}}">
    <view class="button">
      <button  type="primary" bindtap="goTo"> Add Appointment</button>
    </view>
  </block>
</block>





