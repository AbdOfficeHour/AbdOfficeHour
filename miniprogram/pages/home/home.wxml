<!--Part03: 教师选择窗口-->
<!--权限为1或3——学生端界面-->
<block wx:if="{{credit === 1 || credit === 3}}">
  <!--中文界面-->
  <block wx:if="{{language}}">
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{teacherArray}}">
      <view class="choice">
        点击此框，选择要查看的老师：{{teacherArray[index]}}
      </view>
    </picker>
  </block>

  <!--英文界面-->
  <block wx:else>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{teacherArray}}">
      <view class="choice">
        Click this box, select the teacher：{{teacherArray[index]}}
      </view>
    </picker>
  </block>
</block>

<!--权限为2或4——教师端界面-->
