/* pages/home/home.wxss */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 180rpx;
  background-color: #f0f0f0;
  padding: 0 20rpx;
}

.logo {
  width: 800rpx;
  height: 160rpx;
}

.notation{
  height: 100rpx;
  width: 800rpx;
  padding: 0 20rpx;
}

.choice{
  height: 100rpx;
  padding: 0 20rpx;
  border-style: solid;
  border-width: 3rpx;
  border-color:gray;
  border-radius: 96rpx;
  text-align: center;
}

.fui-scroll__wrap {
	padding-top: 30rpx;
	position: relative;
}
.fui-title {
	font-size: 30rpx;
	font-weight: bold;
	text-align: center;
	padding-bottom: 24rpx;
}
.fui-icon__close {
	position: absolute;
	top: 24rpx;
	left: 24rpx;
}

.fui-scroll__view {
	width: 100%;
	height: 800rpx;
}

.section{
  padding: 28rpx 32rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #FFFFFF;
  border: 1rpx solid var(--globalBgColor2)
}

.greenButton{
  margin: 20rpx 0rpx 0rpx;
}