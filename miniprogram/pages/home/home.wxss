/* pages/home/home.wxss */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 180rpx;
  background-color: #f0f0f0;
  padding: 0 20rpx;
}

.logo {
  width: 800rpx;
  height: 160rpx;
}

.notation{
  height: 100rpx;
  width: 800rpx;
  padding: 0 20rpx;
}

.choice{
  height: 60rpx;
  width: 800rpx;
  padding: 0 20rpx;
}

.fui-scroll__wrap {
	padding-top: 30rpx;
	position: relative;
}
.fui-title {
	font-size: 30rpx;
	font-weight: bold;
	text-align: center;
	padding-bottom: 24rpx;
}
.fui-icon__close {
	position: absolute;
	top: 24rpx;
	left: 24rpx;
}

.fui-scroll__view {
	width: 100%;
	height: 800rpx;
}